<?xml version="1.0" encoding="utf-8"?>
   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >
        
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_home" >
 
	<include
	    android:layout_height="wrap_content"
	    layout="@layout/header" />
	 
	 <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaves Details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />
           
 	 <LinearLayout
	     android:id="@+id/linearLayout1"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	   	 android:layout_marginLeft="10dp"
    	 android:layout_marginRight="10dp"
	     android:background="@drawable/selector_cell_top" >

	     <TextView
	         android:id="@+id/textView5"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginLeft="10dp"
	         android:gravity="left|center_vertical"
	         android:layout_weight="0.21"
	         android:text="Leave Type"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Black" />

	     <TextView
	         android:id="@+id/tv_leavetype"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_weight="0.03"
	         android:layout_marginRight="10dp"
	         android:gravity="right|center_vertical"
	         android:text="Choose"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Grey" />

	 </LinearLayout>

	   <LinearLayout
	     android:id="@+id/linearLayout4"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	   	 android:layout_marginLeft="10dp"
    	 android:layout_marginRight="10dp"
	     android:background="@drawable/selector_cell_center" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginLeft="10dp"
	         android:gravity="left|center_vertical"
	         android:layout_weight="0.21"
	         android:text="Entitlement"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Black" />

	     <TextView
	         android:id="@+id/tv_entitlement"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_weight="0.03"
	         android:layout_marginRight="10dp"
	         android:gravity="right|center_vertical"
	         android:text="Choose"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Grey" />

	 </LinearLayout>
	 
 	  <LinearLayout
	     android:id="@+id/linearLayout2"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	   	 android:layout_marginLeft="10dp"
    	 android:layout_marginRight="10dp"
	     android:background="@drawable/selector_cell_center" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginLeft="10dp"
	         android:gravity="left|center_vertical"
	         android:layout_weight="0.21"
	         android:text="From"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Black" />

	     <TextView
	         android:id="@+id/tv_from"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_weight="0.03"
	         android:layout_marginRight="10dp"
	         android:gravity="right|center_vertical"
	         android:text="Choose"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Grey" />

	 </LinearLayout>
	 
 	 	       
 	  <LinearLayout
	     android:id="@+id/linearLayout2"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	   	 android:layout_marginLeft="10dp"
    	 android:layout_marginRight="10dp"
	     android:background="@drawable/selector_cell_center" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginLeft="10dp"
	         android:gravity="left|center_vertical"
	         android:layout_weight="0.21"
	         android:text="To"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Black" />

	     <TextView
	         android:id="@+id/tv_to"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_weight="0.03"
	         android:layout_marginRight="10dp"
	         android:gravity="right|center_vertical"
	         android:text="Choose"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Grey" />

	 </LinearLayout>
	 
 	 <LinearLayout
	     android:id="@+id/linearLayout2"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	   	 android:layout_marginLeft="10dp"
    	 android:layout_marginRight="10dp"
	     android:background="@drawable/selector_cell_bottom" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginLeft="10dp"
	         android:gravity="left|center_vertical"
	         android:text="Applied for (Working Days)"
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Black" />

	     <TextView
	         android:id="@+id/tv_appliedfor"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_weight="0.03"
	         android:layout_marginRight="10dp"
	         android:gravity="right|center_vertical"
	         android:text=""
	         android:textAppearance="?android:attr/textAppearanceMedium"
	         android:textColor="@color/Grey" />

		 </LinearLayout>
 	 
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Leave Reason"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_leavereason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Leave Reason"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Grey"
            android:background="@drawable/selector_cell"
            android:paddingLeft="10dp"
            android:gravity="center_vertical" />

        <LinearLayout
     	android:id="@+id/linearLayout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <Button
             android:id="@+id/btn_approve"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Approve"
             android:layout_marginLeft="20dp"
             android:layout_weight="1"
             android:background="@drawable/selector_normalbutton" 
             android:layout_marginTop="10dp"
             android:layout_marginRight="10dp"/>

         <Button
             android:id="@+id/btn_reject"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Reject"
             android:layout_weight="1"
             android:background="@drawable/selector_normalbutton"
             android:layout_marginTop="10dp"
             android:layout_marginRight="20dp"
             
              />

     </LinearLayout>
        
                 
</LinearLayout>
</ScrollView>